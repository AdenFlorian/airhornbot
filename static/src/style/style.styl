@require 'cloud';
@require 'island';
@require 'tool-tip';
@require 'footer';
@require 'stats-panel';
@require 'stats-crossfade';

html, body, #app {
  height: 100%;
  width: 100%;
}

body {
  font-family: roboto;
  display: flex;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

#app {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  .container {
    position: relative;
    overflow: hidden;
    height: 100%;
  }
}

.content {
  z-index: 1;
  top: -64px;
  position: relative;
  display: flex;
  flex-flow: column;
  align-items: center;

  .title {
    color: color-dark-gray;
    font-size: 64px;
    line-height: 68px;
    margin: 0;
  }

  .message {
    color: color-brown;
    font-size: 15px;
    line-height: 24px;
    opacity: 0.6;

    a {
      color: color-brown;
    }
  }
}

#parallax {
  position: absolute;
  display: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.add-btn {
  background: white;
  border: 2px dashed color-brown;
  border-radius: 30px;
  width: 240px;
  height: 50px;
  text-align: center;
  font-size: 18px;
  color: color-orange;
  line-height: 50px;
  text-transform: uppercase;
  transition: all 100ms ease-in-out;
  cursor: pointer;
  text-decoration: none;
  display: block;

  &:hover {
    color: white;
    background-color: color-brown;
    border: 2px solid color-brown;
  }
}

.video-airhorn {
  padding: 10px;
  width: 681px;
}

@-moz-document url-prefix() {
  .add-btn {
    border-style: solid;
  }
}

@require 'responsive';
