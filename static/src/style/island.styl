.island {
  position: absolute;
  z-index: -1;
  transition: left 0.5s ease, top 0.5s ease, opacity 0.1s ease, visibility 0.1s ease;

  &.pond {
    left: -444px;
    top: 364px;
  }

  &.tree {
    left: -300px;
    top: 800px;
  }

  &.trees {
    left: 876px;
    top: 316px;
  }

  &.tent {
    left: 672px;
    top: 846px;
  }

  &.double-tree {
    left: -1070px;
    top: 570px;
  }

  &.forest {
    left: 270px;
    top: -130px;

  }

  &.forest-1 {
    left: -750px;
    top: 1120px;
  }
  &.log {
    left: 1494px;
    top: 120px;
  }

  &.shrooms {
    left: 1280px;
    top: 1100px;
  }

  &.shrooms-1 {
    left: -720px;
    top: -170px;
  }

  &.small-island {
    z-index: -2;
