@require('variables');

.stats-panel {
  margin-left: 20px;
  position: fixed;
  bottom: 80px + stats-panel-arrow-size + stats-panel-offset;
  left: 0;
  background: white;
  opacity: 0.98;
  border-radius: 2px;
  box-shadow: 0px 0px 1px 0px rgba(0,0,0,0.5);
  padding: 0px;
  color: color-dark-gray;
  
  .stats-content {
    padding: 10px;
    
    .close-btn-container {
      display: flex;
      justify-content: flex-end;
      
      .close-btn {
        cursor: pointer;
        color: color-lightest-gray;
        
        &:hover {
          color: color-light-gray;
        }
      }
    }
  }

  &::after{
    content: "";
    position: absolute;
    left: "calc(50% - %s)" % stats-panel-arrow-size;
    border: stats-panel-arrow-size solid black;
    border-color: transparent transparent white white;
    transform-origin: 0 0;
    transform: rotate(-45deg);
    box-shadow: -1px 1px 0px 0 rgba(0, 0, 0, 0.2);
  }
}