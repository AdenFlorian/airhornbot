@media (max-width: 920px) {
  .content {
    margin-top: -132px;
  }

  .footer {
    flex-direction: column;
    align-items: center;

    .airhorn-count {
      margin-bottom: 28px;
    }
  }

  .stats-panel {
    left: calc(50% - 113px);
    bottom: 140px;
  }

  @-moz-document url-prefix() {
    .stats-panel {
      left: calc(50% - 120px);
    }
  }

  .island {
    &.pond {
      left: -271px;
      top: -305px;
    }

    &.trees {
      left: 744px;
      top: -119px;
    }

    &.tent {
      left: 536px;
      top: 461px;
    }

    &:not(.pond):not(.trees):not(.tent):not(.small-island):not(.tree) {
      visibility: hidden;
      opacity: 0;
    }

    &.small-island {
      &.small-1 {
        left: 538px;
        top: -315px;
      }

      &.small-3 {
        left: -184px;
        top: 201px;
      }

      &.small-10 {
        left: 745px;
        top: 281px;
      }

      &:not(.small-1):not(.small-3):not(.small-10) {
        visibility: hidden;
        opacity: 0;
      }
    }
  }
}

@media (max-width: 690px) {
  .video-airhorn {
    max-width: 90%;
  }

  @-moz-document url-prefix() {
    .video-airhorn {
      width: 90% !important;
    }
  }

  .island {
    &.tree {
      width: calc(@width / 2);
      height: calc(@height / 2);
      background-size: @height @width;
      visibility: visible;
      opacity: 1;
      left: -50px;
      top: 231px;
    }

    &.tent {
      left: 480px;
      top: 371px;
    }
  }
}

@media (max-width: 606px) {
  .content {
    margin-top: -206px;
  }

  .stats-panel {
    bottom: 164px;
  }
}
